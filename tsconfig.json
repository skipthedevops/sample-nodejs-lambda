{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "rootDir": "./src",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": true
    },
    "exclude": [
        "./test/**/*",
        "node_modules",
    ]
}